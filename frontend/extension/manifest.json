{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "AIBot",
  "description": "Your new AI Bot",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": ["https://www.instagram.com/*", "http://localhost:8000/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {},
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["script.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["crime-scene.png"],
      "matches": ["https://www.instagram.com/*"]
    }
  ]
}
