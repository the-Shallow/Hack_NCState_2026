{
    "manifest_version":3,
    "name":"CodeHive",
    "version":"1.0",
    "description":"Auto-push accepted LeetCode submissions to GitHub",
    "permissions":["notifications","scripting","storage","activeTab", "identity"],
    "oauth2":{
        "client_id":"Ov23liZL9Kiq6pk9zkO3",
        "scopes":[
            "repo",
            "user"
        ]
    },
    "host_permissions":["https://github.com/*","https://leetcode.com/*","http://localhost:8000/*"],
    "background":{
        "service_worker":"background.js"
    },
    "content_scripts":[
        {
            "matches":["https://leetcode.com/*"],
            "js":["content.js"],
            "run_at": "document_idle"
        }
    ],
    "action":{
        "default_title":"CodeHive",
        "default_popup":"popup.html"
    }
}